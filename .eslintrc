{
  "env": {
    "browser": true
  },
  "parser": "babel-eslint",
  "extends": "react-app",
  "rules": {
    "prefer-destructuring": [
      "warn"
    ],
    "max-len": [
      "warn",
      120
    ],
    "no-param-reassign": 0,
    "linebreak-style": [
      "error",
      "unix"
    ],
    "quotes": [
      "error",
      "single"
    ],
    "semi": [
      "error",
      "always"
    ],
    "jsx-a11y/anchor-is-valid": [ "error", { "components": [ "Link" ], "specialLink": [ "to" ] } ]
  }
}
